@page "/"

<PageTitle>Tanglewood Candle Co.</PageTitle>

<div class="tw-page">
    <AuthorizeView>
        <NotAuthorized>
            <h1>Future WASM Tanglewood Candles admin site</h1>
        </NotAuthorized>
        <Authorized>
            <dl>
                @foreach (var claim in @context.User.Claims)
                {
                    <dt>@claim.Type</dt>
                    <dd>@claim.Value</dd>
                }
            </dl>
        </Authorized>
    </AuthorizeView>
</div>